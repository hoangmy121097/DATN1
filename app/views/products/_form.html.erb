  <%= form_for(product) do |form| %>
    <% if product.errors.any? %>
      <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %>
      prohibited this product from being saved:</h2>
        <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

  <div class="field">
    <%= form.label :title , 'Tiêu đề'%>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :description , 'Miêu tả'%>
    <%= form.text_area :description, rows: 10, cols: 60 %>
  </div>

  <div class="field">
    <%= form.label :size ,'Kích cỡ'%>
    <%= form.text_area :size %>
  </div>

  <div class="field">
    <%= form.label :color ,'Màu sắc'%>
    <%= form.text_area :color %>
  </div>

  <div class="field">
    <%= form.label :image_url ,'Hình ảnh'%>
    <%= form.text_field :image_url %>
  </div>

  <div class="field">
    <%= form.label :price ,'Giá'%>
    <%= form.text_field :price %>
  </div>

  <%= select_tag(:category_id, options_for_select(@product_type), :prompt => “Select one!”) %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
